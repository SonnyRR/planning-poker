@using Radzen.Blazor
@inherits LayoutComponentBase

<RadzenDialog />
<RadzenNotification />
<RadzenTooltip />
<RadzenContextMenu />

<RadzenLayout>
	<ChildContent>
		<RadzenHeader>
			<ChildContent>
				<RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.SpaceBetween">
					<RadzenImage Path="images/logo.svg" Style="width: 184px; height: 55px; cursor:pointer" @onclick="@(() => NavigationManager.NavigateTo("/"))" />
					<LoginControl />
				</RadzenStack>
			</ChildContent>
		</RadzenHeader>
		<RadzenBody>
			<ChildContent>
				<RadzenContentContainer Name="main">
					@Body
				</RadzenContentContainer>
			</ChildContent>
		</RadzenBody>
		@* <RadzenFooter>
		<ChildContent>
		<RadzenLabel Text="@FooterCopyrightContent">
		</RadzenLabel>
		</ChildContent>
		</RadzenFooter> *@
	</ChildContent>
</RadzenLayout>
