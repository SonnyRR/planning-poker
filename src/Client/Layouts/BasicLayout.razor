@namespace PlanningPoker.Client.Layouts
@using Microsoft.Extensions.Options
@using PlanningPoker.Client.Models
@using Serilog
@inherits LayoutComponentBase

<AntDesign.ProLayout.BasicLayout Logo="(RenderFragment)null">
    <RightContentRender>
        <PlanningPoker.Components.RightContent />
    </RightContentRender>
    <ChildContent>
        @Body
    </ChildContent>
    <FooterRender>
        <FooterView 
            Copyright="@($"{DateTime.UtcNow.Year} - {this.LayoutSettings.Value.Author}")"
            Links="this.LayoutSettings.Value.Links">
        </FooterView>
    </FooterRender>
</AntDesign.ProLayout.BasicLayout>
<SettingDrawer />
