<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Persistence\PlanningPoker.Persistence.csproj" />
    <ProjectReference Include="..\SharedKernel\PlanningPoker.SharedKernel.csproj" />
  </ItemGroup>

  <!--dotnet msbuild -t:Mapster-->
  <Target Name="Mapster">
    <Exec WorkingDirectory="$(ProjectDir)" Command="dotnet tool restore" />
    <CallTarget Targets="CleanGenerated" />
    <Exec WorkingDirectory="$(ProjectDir)" Command="dotnet mapster model -a &quot;$(TargetDir)$(ProjectName).dll&quot; -o &quot;./Models/DTO&quot; -n PlanningPoker.Core.Models.DTO" />
    <Exec WorkingDirectory="$(ProjectDir)" Command="dotnet mapster extension -a &quot;$(TargetDir)$(ProjectName).dll&quot; -o &quot;./Mapping&quot; -n PlanningPoker.Core.Mapping" />
    <Exec WorkingDirectory="$(ProjectDir)" Command="dotnet mapster mapper -a &quot;$(TargetDir)$(ProjectName).dll&quot; -o &quot;./Mapping&quot; -n PlanningPoker.Core.Mapping" />
  </Target>

  <ItemGroup>
    <Generated Include="**\*.g.cs" />
    <Generated Include="..\SharedKernel\**\*.g.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Mapster" Version="7.3.0" />
  </ItemGroup>

  <!--dotnet msbuild -t:CleanGenerated-->
  <Target Name="CleanGenerated">
    <Delete Files="@(Generated)" />
  </Target>

</Project>